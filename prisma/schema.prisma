datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Banco {
  id                    String              @id @default(uuid())
  nombre                String              @unique
  cuentas               CuentaBancaria[]
}


model CuentaBancaria {
  id                    String              @id @default(uuid())
  numeroCuenta          String              @unique
  banco                 Banco               @relation(fields: [bancoId], references: [id], onDelete: Cascade)
  bancoId               String
  entidad               Entidad             @relation(fields: [entidadId], references: [id], onDelete: Cascade)
  entidadId             String 
  esCuentaAhorro        Boolean
  saldo                 Int
  saldoDisponible       Int
  operaciones           Operacion[]
}


model Entidad {
  id                    String              @id @default(uuid())
  nombre                String              @unique
  ruc                   String              @unique
  CuentaBancaria        CuentaBancaria[]
}


model TipoOperacion {
  id                    String              @id @default(uuid())
  nombre                String              @unique
  esDebito              Boolean
  afectaSaldo           Boolean
  Operacion             Operacion[]
}


model Operacion {
  id                  String                @id @default(uuid())
  tipoOperacion       TipoOperacion         @relation(fields: [tipoOperacionId], references: [id], onDelete: Cascade)
  tipoOperacionId     String
  fechaOperacion      DateTime              @default(now())
  monto               Int

  cuentaBancariaOrigen CuentaBancaria       @relation(fields: [cuentaBancariaOrigenId], references: [id], onDelete: Cascade)
  cuentaBancariaOrigenId String

  bancoInvolucrado    String           
  nombreInvolucrado   String
  cuentaInvolucrado   String
  rucInvolucrado      String

  concepto            String

  numeroComprobante   String
}


model User {
  id String @id @default(uuid())
  username String @unique
  password String
}